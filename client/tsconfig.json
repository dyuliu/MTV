{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}